@model Usuario
@{
    ViewBag.Subtitulo = "Excluir";
}

<h1 class="text-primary">Exclusão de Usuário</h1>
<hr>
<h4>Deseja realmente excluir o usuário <span class="text-danger">@Model.Nome</span>?</h4>
<form asp-controller="Home" asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <a href="/Home/Usuarios" class="btn btn-success">Não</a>
        <button class="btn btn-danger" type="submit">Sim</button>
    </div>
</form>
